# Include the README
include README.md

# Include the license file
include LICENSE

# Include the requirements file if you have one
include requirements.txt

# Include any documentation
recursive-include docs *

# Include the test files
recursive-include tests *

# Include any configuration files
include pyproject.toml

# Exclude development and temporary files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude *.egg
global-exclude downloads
global-exclude cline_docs